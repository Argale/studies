<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.epam.tp.poc</groupId>
  <artifactId>MailRu</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>com.epam.tp.poc.MailRu</name>
  <description>test for PoC</description>
  
  <properties>
		<cucumber-jvm.version>1.2.4</cucumber-jvm.version>
		<selenium.version>2.25.0</selenium.version>
		<junit.version>4.11</junit.version>
		<spring.version>4.2.3.RELEASE</spring.version>
		<maven-surefire-plugin.version>2.16</maven-surefire-plugin.version>
	</properties>
	<dependencies>  
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>2.43.1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-surefire-plugin</artifactId>
			<version>${maven-surefire-plugin.version}</version>
		</dependency>
		<dependency>
			<groupId>info.cukes</groupId>
			<artifactId>cucumber-junit</artifactId>
			<version>1.2.4</version>
		</dependency>
		<dependency>
			<groupId>info.cukes</groupId>
			<artifactId>cucumber-java</artifactId>
			<version>1.2.4</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
		 <plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-surefire-plugin</artifactId>
        		<version>2.19.1</version>
        		<configuration>
        		<forkCount>3</forkCount>
        		<parallel>3</parallel>
        		<threadCount>3</threadCount>
          		<systemPropertyVariables>
            	<useNewBrowserWindowForEachScenario></useNewBrowserWindowForEachScenario>
            	<webdriver.proxy.server></webdriver.proxy.server>
            	<webdriver.proxy.port></webdriver.proxy.port>
            	<webdriver.proxy.type></webdriver.proxy.type>
            	<webdriver.proxy.autoconfig.url></webdriver.proxy.autoconfig.url>
            	<ENV></ENV>
            	</systemPropertyVariables>
        		</configuration>   		
      		</plugin>
      		</plugins>
      	</build>	
  
</project>